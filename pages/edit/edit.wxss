/* pages/edit/edit.wxss */
page{
  background: #F5F7FA;
}

.item-container {
  margin: 30rpx;
  background:#fff ;
  box-sizing: border-box;
}


.van-uploader {
  padding: 30rpx;
}

.upload-title {
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #323233;
}

.video-container {
  padding: 16px;
}

.video-preview {
  position: relative;
  width: 100%;
  height: 200px;
  background: #f7f8fa;
  border-radius: 8px;
  overflow: hidden;
}

.video-player {
  width: 100%;
  height: 100%;
}

.delete-icon {
  position: absolute;
  top: 8px;
  right: 8px;
  padding: 8px;
  color: #fff;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  z-index: 1;
} 