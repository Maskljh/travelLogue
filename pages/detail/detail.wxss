/* pages/detail/detail.wxss */
.detail-container {
  padding: 32rpx 24rpx 140rpx 24rpx;
  background: #f7f7f7;
  min-height: 100vh;
}
.detail-img {
  width: 100%;
  border-radius: 16rpx;
  margin-bottom: 28rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
}
.detail-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #222;
  line-height: 1.2;
}
.user-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 10rpx;
}
.item-ava {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
}
.detail-info-bar {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx 0;
  margin-bottom: 28rpx;
  justify-content: space-between;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
}
.info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}
.info-label {
  color: #aaa;
  font-size: 22rpx;
  margin-bottom: 6rpx;
}
.info-value {
  color: #2b4b6b;
  font-size: 30rpx;
  font-weight: bold;
}
.detail-desc {
  font-size: 30rpx;
  color: #333;
  line-height: 1.9;
  margin-bottom: 18rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
}
.detail-views {
  color: #aaa;
  font-size: 24rpx;
  margin-bottom: 18rpx;
}
.detail-bottom-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
  border-top: 1px solid #f0f0f0;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100vw;
  background: #fff;
  z-index: 99;
  height: 110rpx;
  box-shadow: 0 -2rpx 12rpx rgba(0,0,0,0.04);
}
.detail-bottom-bar .van-icon {
  color: #2b4b6b;
  margin-right: 18rpx;
  transition: color 0.2s;
}
.detail-bottom-bar .van-icon:active {
  color: #ffb300;
}
.comment-input {
  flex: 1;
  margin-left: 18rpx;
  padding: 16rpx 22rpx;
  border-radius: 32rpx;
  background: #f7f7f7;
  border: none;
  font-size: 28rpx;
  color: #333;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
}