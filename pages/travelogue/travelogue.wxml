<view class="container">
  <view class="card-list">
    <view class="card" wx:for="{{cards}}" wx:key="id" bind:tap="toDetail" data-info="{{item}}">
      <image class="card-img" src="{{item.img}}" mode="aspectFill"></image>
      <view class="card-content">
        <view class="card-title">{{item.title}}</view>
        <view class="card-desc">{{item.desc}}</view>
        <view class="card-footer">
          <view class="user-info">
            <image class="item-ava" src="{{item.avatar}}"></image>
            <text class="author">{{item.author}}</text>
          </view>
          <text class="views">👁 {{item.views}}</text>
        </view>
      </view>
    </view>
  </view>
</view>