/* pages/favor/favor.wxss */
.container {
  padding: 16rpx;
  background: #f7f7f7;
}

.card-list {
  width: 100%;
}

.waterfall-item {
  background: #fff;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  overflow: hidden;
}

.item-content {
  padding: 16rpx;
}

.item-title {
  font-weight: bold;
  font-size: 28rpx;
  margin-bottom: 8rpx;
  overflow: hidden;
}

.item-desc {
  color: #888;
  font-size: 24rpx;
  margin-bottom: 12rpx;
  overflow: hidden;
}

.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
  color: #aaa;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.item-ava {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
}

.search-container {
  width: 100%;
  padding: 10rpx 0;
  background: #ffffff;
  position: sticky;
  top: 0;
  z-index: 100;
}

.backtop {
  position: fixed;
  bottom: 10px;
  right: 8px;
  border-radius: 50%;
  width: 30px;
  height: 30px;
  background-color: rgba(0, 0, 0, 0.5);
  font-size: 18px;
  text-align: center;
  line-height: 30px;
}